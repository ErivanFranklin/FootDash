{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "skipLibCheck": true,
          "noImplicitAny": false
        }
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!uuid)"
  ]
}
